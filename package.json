{
  "name": "minimalist-portfolio-json",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --testNamePattern='integration'",
    "test:security": "vitest run --testNamePattern='security'",
    "test:solid": "vitest run --testNamePattern='solid'",
    "lint:js": "eslint src/ --ext .js --config .eslintrc.security.cjs --quiet",
    "lint": "eslint src/ --ext .js,.cjs --config .eslintrc.security.cjs --quiet",
    "lint:security": "eslint src/tests/ --ext .js --config .eslintrc.security.cjs || true",
    "security:audit": "npm audit --audit-level high --omit=dev",
    "security:scan": "npm run lint:security && npm run security:audit",
    "security:sast": "node scripts/security-scanner.cjs",
    "security:dast": "npm run test:security",
    "pre-commit": "npm run test:run && npm run security:audit",
    "validate": "npm run test:run && npm run lint && npm run security:audit",
    "ci": "npm run validate",
    "cd:validate": "node scripts/cd-validator.cjs",
    "cd:validate-critical": "npm run security:audit && npm run build"
  },
  "dependencies": {
    "@astrojs/check": "0.4.1",
    "astro": "^5.16.12",
    "firebase": "^12.7.0",
    "hotkeypad": "0.1.0",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/eslint-plugin-security": "^3.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-xss": "^0.1.12",
    "jsdom": "^27.4.0",
    "vitest": "^4.0.16"
  }
}
