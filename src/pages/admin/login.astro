---
// Página de login para administrador - Mejorada y más robusta
import Layout from "@/layouts/Layout.astro"

interface Props {
  error?: string
}

const { error } = Astro.props
---

<Layout title="Administración - Login">
  <div class="login-container">
    <div class="login-card">
      <h1 class="login-title">Panel de Administración</h1>
      <p class="login-subtitle">Gestiona tus capacitaciones y certificaciones</p>
      
      {error && (
        <div class="error-message">
          <strong>Error:</strong> {error}
        </div>
      )}
      
      <form id="login-form" class="login-form">
        <div class="form-group">
          <label for="email">Correo electrónico</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            autocomplete="email"
            placeholder="admin@ejemplo.com"
            value="dsaavedra88@gmail.com"
          />
        </div>
        
        <div class="form-group">
          <label for="password">Contraseña</label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            required 
            autocomplete="current-password"
            placeholder="Tu contraseña"
            type="password"
          />
        </div>
        
        <div class="form-actions">
          <button type="submit" class="login-btn" id="login-btn">
            <span class="btn-text">Iniciar sesión</span>
            <span class="btn-loading" style="display: none;">Procesando...</span>
          </button>
          
          <a href="/" class="back-btn">← Volver al portafolio</a>
        </div>
      </form>
      
      {import.meta.env.PROD === false && (
        <div class="debug-info">
        <p><strong>Acceso de prueba:</strong></p>
        <p>Email: dsaavedra88@gmail.com</p>
        <p>Contraseña: a1b2c3d4*</p>
      </div>
      )}
    </div>
  </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', async () => {
    const { signInWithEmailAndPassword, onAuthStateChanged } = await import("firebase/auth");
    const { auth } = await import("@/firebase.js");
    
    const form = document.getElementById('login-form');
    const submitBtn = document.getElementById('login-btn');
    const btnText = form.querySelector('.btn-text');
    const btnLoading = form.querySelector('.btn-loading');
    
    const unsubscribe = onAuthStateChanged(auth, (user) => {
      if (user) {
        console.log('Usuario ya autenticado:', user.email);
        window.location.href = '/admin/dashboard/';
      }
    });
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const email = form.elements.namedItem('email').value;
      const password = form.elements.namedItem('password').value;
      
      console.log('Intentando login con:', email);
      
      submitBtn.disabled = true;
      btnText.style.display = 'none';
      btnLoading.style.display = 'inline';
      
      try {
        const userCredential = await signInWithEmailAndPassword(auth, email, password);
        console.log('Login exitoso:', userCredential.user);
        window.location.href = '/admin/dashboard/';
        
      } catch (error) {
        console.error('Error de autenticación:', error);
        
        let errorMessage = 'Error al iniciar sesión';
        
        switch (error.code) {
          case 'auth/user-not-found':
            errorMessage = 'Usuario no encontrado';
            break;
          case 'auth/wrong-password':
            errorMessage = 'Contraseña incorrecta';
            break;
          case 'auth/invalid-email':
            errorMessage = 'Correo electrónico inválido';
            break;
          case 'auth/user-disabled':
            errorMessage = 'Usuario deshabilitado';
            break;
          case 'auth/too-many-requests':
            errorMessage = 'Demasiados intentos. Inténtalo más tarde';
            break;
          case 'auth/network-request-failed':
            errorMessage = 'Error de conexión. Verifica tu internet';
            break;
          default:
            errorMessage = `Error: ${error.message}`;
        }
        
        const errorDiv = document.createElement('div');
        errorDiv.className = 'error-message';
        errorDiv.innerHTML = `<strong>Error:</strong> ${errorMessage}`;
        
        const existingError = form.querySelector('.error-message');
        if (existingError) {
          existingError.remove();
        }
        
        form.insertBefore(errorDiv, form.firstChild);
        
      } finally {
        submitBtn.disabled = false;
        btnText.style.display = 'inline';
        btnLoading.style.display = 'none';
      }
    });
  });
</script>

<style>
  /* Contenedor principal */
  .login-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: var(--color-bg);
  }
  
  /* Tarjeta de login */
  .login-card {
    width: 100%;
    max-width: 450px;
    padding: 2rem;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    background: var(--color-bg);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  
  /* Títulos */
  .login-title {
    font-size: 1.8rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
    color: var(--color-text);
    text-align: center;
  }
  
  .login-subtitle {
    color: var(--color-text-secondary);
    text-align: center;
    margin-bottom: 2rem;
  }
  
  /* Mensaje de error */
  .error-message {
    background: #fee;
    color: #c33;
    padding: 1rem;
    border-radius: 8px;
    border: 1px solid #fcc;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }
  
  /* Formulario */
  .login-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .form-group label {
    font-weight: 600;
    color: var(--color-text);
    font-size: 0.9rem;
  }
  
  .form-group input {
    padding: 0.75rem 1rem;
    border: 2px solid var(--color-border);
    border-radius: 8px;
    background: var(--color-bg);
    color: var(--color-text);
    font-size: 0.95rem;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }
  
  .form-group input:focus {
    outline: none;
    border-color: #007acc;
    box-shadow: 0 0 0 3px rgba(0, 122, 204, 0.1);
  }
  
  /* Botones y acciones */
  .form-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1rem;
  }
  
  .login-btn {
    background: linear-gradient(135deg, #007acc, #005a9e);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
  }
  
  .login-btn:hover:not(:disabled) {
    background: linear-gradient(135deg, #005a9e, #004080);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 122, 204, 0.3);
  }
  
  .login-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none;
  }
  
  .back-btn {
    text-align: center;
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }
  
  .back-btn:hover {
    color: #007acc;
  }
  
  /* Debug info - Solo para desarrollo */
  .debug-info {
    margin-top: 2rem;
    padding: 1rem;
    background: var(--color-bg-hover);
    border-radius: 8px;
    border: 1px solid #ddd;
    font-size: 0.85rem;
  }
  
  .debug-info p {
    margin: 0.25rem 0;
    color: var(--color-text-secondary);
  }
  
  /* Responsive */
  @media (width <= 768px) {
    .login-container {
      padding: 1rem;
    }
    
    .login-card {
      padding: 1.5rem;
      max-width: 100%;
    }
    
    .login-title {
      font-size: 1.5rem;
    }
  }
</style>