---
import Layout from "@/layouts/Layout.astro"
import About from "@/components/sections/About.astro"
import Education from "@/components/sections/Education.astro"
import Experience from "@/components/sections/Experience.astro"
import Hero from "@/components/sections/Hero.astro"
import Portfolio from "@/components/sections/Portfolio.astro"
import Publications from "@/components/sections/Publications.astro"
import Skills from "@/components/sections/Skills.astro"
import KeyboardManager from "@/components/KeyboardManager.astro"
import { basics } from "@cv"
const { name, label } = basics
const labelText = typeof label === 'object' ? label.es : label
---

<Layout title={`Portafolio de ${name} - ${labelText}`}>
  <main>
    <Hero />
    <About />
    <Experience />
    <Education />
    <Portfolio />
    <Publications />
    <Skills />
  </main>

  <KeyboardManager />
</Layout>

<style>
  main {
    padding: 3rem 4rem;
    margin: auto;
    width: 100%;
    max-width: 1200px;
  }

  @media (width <= 1024px) {
    main {
      padding: 2.5rem 3rem;
    }
  }

  @media (width <= 700px) {
    main {
      padding: 1.5rem;
    }
  }
</style>
