---
import { basics } from "@cv"
import ThemeToggle from "@/components/ThemeToggle.astro"
import LanguageToggle from "@/components/LanguageToggle.astro"

interface Props {
  title: string
}

const { title } = Astro.props

const { image, summary, url } = basics
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={summary} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href={image} />

    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={summary} />
    <meta property="og:image" content="" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={url.split("//")[1] ?? ''} />
    <meta property="twitter:url" content={url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={summary} />
    <meta name="twitter:image" content="" />

    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();
    
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>

    <script is:inline>
      const lang = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('lang')) {
          return localStorage.getItem('lang');
        }
        return 'es';
      })();
    
      document.documentElement.setAttribute('lang', lang);
    </script>

    <script is:inline>
      const translations = {
        es: {
          section: {
            about: "Sobre mí",
            experience: "Experiencia laboral",
            education: "Educación",
            portfolio: "Portafolio",
            publications: "Publicaciones Científicas",
            skills: "Habilidades"
          },
          portfolio: {
            active: "Activo"
          },
          hero: {
            name: "Diego Medardo Saavedra García",
            label: "FullStack Developer con más de 8 años de experiencia & Facilitador de Cursos de Desarrollo Web FullStack, Data Science y Móvil.",
            location: "Loja - Loja, Ecuador",
            printInfo: "dsaavedra88@gmail.com • +593 980192790 • https://linkedin.com/in/diego-saavedra-developer"
          },
          hotkeypad: {
            footer: 'Pulsa <kbd>Cmd</kbd> + <kbd>K</kbd> para abrir la paleta de comandos.',
            placeholder: "Buscar comando"
          }
        },
        en: {
          section: {
            about: "About Me",
            experience: "Work Experience",
            education: "Education",
            portfolio: "Portfolio",
            publications: "Scientific Publications",
            skills: "Skills"
          },
          portfolio: {
            active: "Active"
          },
          hero: {
            name: "Diego Medardo Saavedra García",
            label: "FullStack Developer with over 8 years of experience & Facilitator of Web Development, Data Science, and Mobile Development Courses.",
            location: "Loja - Loja, Ecuador",
            printInfo: "dsaavedra88@gmail.com • +593 980192790 • https://linkedin.com/in/diego-saavedra-developer"
          },
          hotkeypad: {
            footer: 'Press <kbd>Cmd</kbd> + <kbd>K</kbd> to open the command palette.',
            placeholder: "Search command"
          }
        }
      };

      function getNestedValue(obj, path) {
        return path.split('.').reduce((current, key) => current?.[key], obj);
      }

      function updateContent(lang) {
        const t = translations[lang];
        
        document.querySelectorAll('[data-i18n]').forEach(el => {
          const key = el.getAttribute('data-i18n');
          if (key) {
            const value = getNestedValue(t, key);
            if (value !== undefined) {
              if (el.tagName === 'INPUT' || el.tagName === 'TEXTAREA') {
                el.placeholder = value;
              } else {
                el.textContent = value;
              }
            }
          }
        });
        
        document.querySelectorAll('[data-i18n-key]').forEach(el => {
          const key = el.getAttribute('data-i18n-key');
          if (key) {
            const value = getNestedValue(t, key);
            if (value !== undefined) {
              el.textContent = value;
            }
          }
        });
      }

      function initI18n() {
        const lang = document.documentElement.getAttribute('lang') || 'es';
        updateContent(lang);

        window.addEventListener('langchange', (event) => {
          updateContent(event.detail.lang);
        });
      }

      initI18n();
    </script>
  </head>
  <body>
    <slot />
    <LanguageToggle />
    <ThemeToggle />
  </body>
</html>

<style is:global>
  /* Definimos las variables de color para ambos temas */
  :root {
    --color-bg: #fff;
    --color-bg-hover: #f4f4f4;
    --color-text: #111;
    --color-text-secondary: #666;
    --color-border: #eee;
  }

  /* VARIABLES PARA EL AZUL OSCURO */
  html.dark {
    --color-bg: #0a0e1a; /* Azul oscuro profundo */
    --color-bg-hover: #1b243d;
    --color-text: #ededed;
    --color-text-secondary: #a1a1a1;
    --color-border: #333;
  }

  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    /* Usamos la variable en lugar del color fijo */
    background: var(--color-bg);
    color: var(--color-text);
    letter-spacing: -0.025rem;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    color: var(--color-text); /* Asegura que los títulos usen la variable */
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: var(--color-text-secondary); /* Usamos la variable */
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  .print {
    display: none !important;
  }

  @media print {
    /* Forzamos modo claro al imprimir */
    :root {
      --color-bg: #fff !important;
      --color-text: #000 !important;
      --color-text-secondary: #555 !important;
    }
    
    html {
      background: #fff !important;
      color: #000 !important;
    }

    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }

    astro-dev-toolbar {
      display: none !important;
    }

    article {
      break-inside: avoid;
    }
  }
</style>
