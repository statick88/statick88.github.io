---
const { i18nKey } = Astro.props
---

<section>
  {i18nKey && <h2 data-i18n-key={i18nKey}></h2>}
  <slot />
</section>



<style>
  section {
    max-width: 800px;
    margin: 0 auto 40px;
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }

  @media (width <= 1200px) {
    section {
      max-width: 750px;
    }
  }

  @media (width <= 700px) {
    section {
      margin-bottom: 38px;
      max-width: 100%;
    }
  }
</style>
