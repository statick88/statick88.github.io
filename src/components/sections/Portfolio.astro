---
import Section from "../Section.astro"
import { projects } from "@cv"

const sortedProjects = [...projects]
  .sort((a, b) => {
    return 0;
  })
  .slice(0, 5)

function isGitHub(url: string): boolean {
  return url.includes("github.com")
}

function getDomain(url: string): string {
  try {
    const domain = new URL(url).hostname
    return domain.replace("www.", "")
  } catch {
    return "sitio web"
  }
}
---

<Section title="Portafolio">
  <div class="projects-grid">
    {
      sortedProjects.map(
        ({ name, description, highlights, url, github, image, isActive }) => {
          return (
            <article class="project-card">
              {image && (
                <div class="project-image">
                  <img src={image} alt={name} loading="lazy" />
                </div>
              )}
              <header>
                <div class="project-header">
                  <h3>
                    <a href={url} title={`Ver ${name}`} target="_blank" rel="noopener noreferrer">
                      {name}
                    </a>
                  </h3>
                  {isActive && <span class="active-badge">Activo</span>}
                </div>
              </header>

              <footer>
                <p class="project-description">{description}</p>
                {highlights && highlights.length > 0 && (
                  <ul class="project-highlights">
                    {highlights.map((highlight) => (
                      <li>{highlight}</li>
                    ))}
                  </ul>
                )}
                <div class="project-links">
                  <a href={url} target="_blank" rel="noopener noreferrer" class="btn btn-deploy">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                      <polyline points="15 3 21 3 21 9"></polyline>
                      <line x1="10" y1="14" x2="21" y2="3"></line>
                    </svg>
                    <span>{getDomain(url)}</span>
                  </a>
                  {github && github !== url && (
                    <a href={github} target="_blank" rel="noopener noreferrer" class="btn btn-github">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                      <span>GitHub</span>
                    </a>
                  )}
                </div>
              </footer>
            </article>
          )
        }
      )
    }
  </div>
</Section>

<style>
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .project-card {
    background: var(--color-bg-hover);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.25rem;
    transition: transform 0.2s ease, border-color 0.2s ease;
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    transform: translateY(-2px);
    border-color: var(--color-text-secondary);
  }

  .project-image {
    margin: -1.25rem -1.25rem 1rem -1.25rem;
    border-radius: 8px 8px 0 0;
    overflow: hidden;
    aspect-ratio: 16/9;
    background: var(--color-bg);
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .project-card h3 {
    font-weight: 600;
    color: var(--color-text);
    font-size: 1rem;
    margin: 0;
  }

  .project-card a {
    color: var(--color-text);
    text-decoration: none;
  }

  .project-card a:hover {
    text-decoration: underline;
  }

  .active-badge {
    background: #28a745;
    color: white;
    font-size: 0.7rem;
    padding: 0.15rem 0.4rem;
    border-radius: 10px;
    font-weight: 500;
    white-space: nowrap;
  }

  .project-description {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 0.75rem;
    flex-grow: 1;
  }

  .project-highlights {
    list-style: none;
    padding: 0;
    margin: 0 0 1rem 0;
  }

  .project-highlights li {
    color: var(--color-text);
    font-size: 0.85rem;
    padding: 0.2rem 0;
    padding-left: 1rem;
    position: relative;
  }

  .project-highlights li::before {
    content: "â–¹";
    position: absolute;
    left: 0;
    color: var(--color-text-secondary);
  }

  .project-links {
    display: flex;
    gap: 0.5rem;
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.4rem 0.75rem;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .btn-deploy {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    color: var(--color-text);
  }

  .btn-deploy:hover {
    border-color: var(--color-text-secondary);
    background: var(--color-bg-hover);
  }

  .btn-github {
    background: #24292e;
    border: 1px solid #24292e;
    color: white;
  }

  .btn-github:hover {
    background: #2f363d;
    border-color: #2f363d;
  }

  @media (width <= 700px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
