---
import Section from "../Section.astro"

import { publications } from "@cv"
---

<Section title="Publicaciones Cient칤ficas">
  <ul>
    {
      publications.map(({ name, publisher, releaseDate, url, summary }) => {
        const year = new Date(releaseDate).getFullYear()

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{name}</h3>
                  <p><strong>{publisher}</strong></p>
                </div>

                <time>{year}</time>
              </header>
              <footer>
                <a href={url} target="_blank" rel="noopener noreferrer">link</a>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  
  li {
    list-style: none; /* Limpieza */
    margin-bottom: 0;
  }

  article h3 {
    font-weight: 600; /* Ligeramente m치s negrita para t칤tulos */
    /* 游꿢 CORRECCI칍N TEMA OSCURO: Usar variable de texto principal */
    color: var(--color-text); 
  }
  
  article p {
    /* Color secundario para el editor (publisher) */
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    margin-top: 4px;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    /* 游꿢 CORRECCI칍N TEMA OSCURO: Usar variable de texto secundario */
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    min-width: 102px;
    text-align: right;
  }

  footer a {
    /* 游꿢 CORRECCI칍N TEMA OSCURO: Usar variable de acento */
    color: var(--color-accent); 
    text-decoration: none;
    font-size: 0.9rem;
  }

  footer a:hover {
    text-decoration: underline;
  }

  /* Media query movida fuera de header para mejor organizaci칩n */
  @media (width <= 700px) {
    header {
        flex-direction: column;
        gap: 4px;
    }
    time {
        text-align: left; /* Alineaci칩n del a침o a la izquierda en m칩vil */
        min-width: auto;
    }
  }
</style>
