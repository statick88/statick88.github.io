---
import Section from "../Section.astro"

import { publications } from "@cv"
---

<Section title="Publicaciones">
  <ul>
    {
      publications.map(({ name, publisher, releaseDate, url, summary }) => {
        const year = new Date(releaseDate).getFullYear()

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{name}</h3>
                  <p><strong>{publisher}</strong></p>
                </div>

                <time>{year}</time>
              </header>

              <p>{summary}</p>
              <footer>
                <a href={url} target="_blank" rel="noopener noreferrer">Leer m√°s</a>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  footer a {
    color: #0070f3;
    text-decoration: none;
  }

  footer a:hover {
    text-decoration: underline;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>

