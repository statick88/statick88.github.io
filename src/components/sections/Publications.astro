---
import Section from "../Section.astro"

import { publications } from "@cv"
---

<Section title="Publicaciones CientÃ­ficas" i18nKey="section.publications">
  <ul>
    {
      publications.map(({ name, publisher, releaseDate, url, summary }, index) => {
        const date = typeof releaseDate === 'string' ? releaseDate.slice(0, 7) : ''

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a
                      href={url}
                      target="_blank"
                      rel="noopener noreferrer"
                      data-i18n={`cv.publications.${index}.name`}
                    >
                      {name}
                    </a>
                  </h3>
                  <p>
                    <a href={url} target="_blank" rel="noopener noreferrer">
                      {publisher}
                    </a>
                  </p>
                </div>

                <time>{date}</time>
              </header>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  
  li {
    list-style: none;
    margin-bottom: 0;
  }

  article h3 {
    font-weight: 600;
    /* ðŸŽ¯ CORRECCIÃ“N: Usar variable para el color de texto principal */
    color: var(--color-text); 
  }

  article h3 a {
    color: var(--color-accent);
    text-decoration: none;
  }

  article h3 a:hover {
    text-decoration: underline;
  }
  
  article p {
    /* Usar variable para el color de texto secundario */
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    margin-top: 4px;
  }

  article p a {
    color: var(--color-accent);
    text-decoration: none;
  }

  article p a:hover {
    text-decoration: underline;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    /* ðŸŽ¯ CORRECCIÃ“N: Usar variable para el color de texto secundario */
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    min-width: 102px;
    text-align: right;
  }

  footer { display: none; }

  @media (width <= 700px) {
    header {
        flex-direction: column;
        gap: 4px;
    }
    time {
        text-align: left;
        min-width: auto;
    }
  }
</style>
