---
import Mail from "@/icons/Mail.astro"
import Phone from "@/icons/Phone.astro"
import X from "@/icons/X.astro"
import LinkedIn from "@/icons/LinkedIn.astro"
import GitHub from "@/icons/GitHub.astro"
import WorldMap from "@/icons/WorldMap.astro"
import { basics } from "@cv"

const labelValue = basics.label?.es || basics.label?.en || String(basics.label)
const imageSrc = basics.image || "/me.webp"
---

<div id="i18n-content" data-i18n>
  <section class="hero-section" data-i18n-key="hero">
    <div class="container">
      <div class="info">
        <h1 data-i18n="cv.basics.name">{basics.name}</h1>
        <h2 data-i18n="cv.basics.label">{labelValue}</h2>
        <span>
          <WorldMap />
          <span data-i18n="hero.location">{basics.location.city}, {basics.location.countryCode}</span>
        </span>
        <footer class="print">
          <span data-i18n="hero.printInfo">dsaavedra88@gmail.com • +593 980192790 • https://www.linkedin.com/in/statick88</span>
        </footer>
        <footer class="no-print social-links">
          <a href="mailto:dsaavedra88@gmail.com" title="Enviar un correo electrónico a Diego Medardo Saavedra García al correo dsaavedra88@gmail.com" target="_blank" rel="noopener noreferrer">
            <Mail />
          </a>
          <a href="tel:+593980192790" title="Llamar por teléfono a Diego Medardo Saavedra García al número +593 980192790" target="_blank" rel="noopener noreferrer">
            <Phone />
          </a>
          <a href="https://www.linkedin.com/in/statick88/" title="Visitar el perfil de Diego Medardo Saavedra García en LinkedIn" target="_blank" rel="noopener noreferrer">
            <LinkedIn />
          </a>
          <a href="https://x.com/statick_ds" title="Visitar el perfil de Diego Medardo Saavedra García en X" target="_blank" rel="noopener noreferrer">
            <X />
          </a>
          <a href="https://github.com/statick88" title="Visitar el perfil de Diego Medardo Saavedra García en GitHub" target="_blank" rel="noopener noreferrer">
            <GitHub />
          </a>
        </footer>
      </div>
        <figure>
          <picture>
            <source srcset={`${imageSrc.replace('.webp', '.avif')} 1x, ${imageSrc.replace('.webp', '.avif')} 2x`} type="image/avif" />
            <source srcset={`${imageSrc} 1x, ${imageSrc} 2x`} type="image/webp" />
            <img src={imageSrc} alt="Diego Medardo Saavedra García" width="128" height="128" fetchpriority="high" />
          </picture>
        </figure>
    </div>
  </section>
</div>

<style>
  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    padding-top: 1rem;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    text-align: left;
    padding-right: 2rem;
    flex: 1;
  }

  figure {
    display: block;
  }
  
  img { 
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 128px;
    border-radius: 16px;
    border: 1px solid var(--color-border);
    transition: all 0.3s ease;
  }
  
  img:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  h1 {
    font-size: 2.25rem;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  h2 {
    color: var(--color-text-secondary);
    font-weight: 500;
    font-size: 1.15rem;
    text-wrap: balance;
    line-height: 1.4;
  }

  span {
    color: var(--color-text-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }

  footer {
    color: var(--color-text-secondary);
    font-size: 0.65rem;
    display: flex;
    gap: 8px;
    margin-top: 12px;
    justify-content: flex-start;
  }

  .social-links {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  footer a {
    color: var(--color-text-secondary);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--color-border);
    padding: 6px;
    height: 36px;
    width: 36px;
    border-radius: 8px;
    transition: all 0.3s ease;
    background: var(--color-bg-hover);
  }

  footer a:hover {
    background: var(--color-border);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  @media (width >= 1400px) {
    .container {
      gap: 3rem;
      max-width: 900px;
      margin: 0 auto;
    }
    
    .info {
      padding-right: 3rem;
      flex: 1.2;
    }
    
    img {
      width: 150px;
      height: 150px;
      border-radius: 20px;
      box-shadow: 0 8px 16px rgba(0,0,0,0.1);
      transition: transform 0.3s ease;
    }
    
    img:hover {
      transform: scale(1.05);
    }
  }

  @media (width <= 1200px) {
    .container {
      gap: 1.5rem;
    }
  }

  @media (width <= 700px) {
    .container {
      flex-direction: column-reverse;
      padding-top: 1rem;
      justify-content: center;
      gap: 1rem;
    }

    .info {
      justify-content: center;
      align-items: center;
      text-align: center;
      padding-right: 0;
    }

    h1 {
        font-size: 1.8rem;
    }

    span, .social-links {
      justify-content: center;
    }
  }
</style>
