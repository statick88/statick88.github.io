---
import { basics } from "@cv"
import Section from "@/components/Section.astro"
import Mail from "@/icons/Mail.astro"
import Phone from "@/icons/Phone.astro"
import X from "@/icons/X.astro"
import LinkedIn from "@/icons/LinkedIn.astro"
import GitHub from "@/icons/GitHub.astro"
import WorldMap from "@/icons/WorldMap.astro"

// Importamos los nuevos iconos (Aseg√∫rate de tenerlos en src/icons/)
import Duolingo from "@/icons/Duolingo.astro"
import Chess from "@/icons/Chess.astro"
import Game from "@/icons/Game.astro"

import type { SocialIcon } from "@/types"

// RE-A√ëADIMOS la importaci√≥n de 'image'
const { name, label, image, location, profiles, phone, email } = basics 
const { city, region } = location

// Mapeamos las redes sociales a sus componentes de √≠cono
const SOCIAL_ICONS: SocialIcon = {
  GitHub,
  LinkedIn,
  X,
  Duolingo,
  "Chess.com": Chess,
  "Chess Universe": Game,
}

const linkedInfo = profiles.find(({ network }) => network === "LinkedIn")
const linkedUrl = linkedInfo?.url

const printInfo = [email, phone, linkedUrl].filter(Boolean).join(" ‚Ä¢ ")
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>
        <WorldMap />
        {city}, {region}
      </span>
      <footer class="print">
        {printInfo}
      </footer>
      <footer class="no-print">
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Enviar un correo electr√≥nico a ${name} al correo ${email}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Mail />
            </a>
          )
        }
        {
          phone && (
            <a
              href={`tel:${phone}`}
              title={`Llamar por tel√©fono a ${name} al n√∫mero ${phone}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Phone />
            </a>
          )
        }
        {
          profiles.map(({ network, url, username }) => {
            const Icon = SOCIAL_ICONS[network]

            if (!Icon) return null

            return (
              <a
                href={url}
                title={`Visitar el perfil de ${name} en ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon />
              </a>
            )
          })
        }
      </footer>
    </div>
    <figure>
      <img src={image} alt={name} />
    </figure>
  </div>
</Section>

<style>
  .container {
    /* Usamos flex para posicionar texto e imagen */
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between; 
    gap: 1rem;
    padding-top: 2rem; 
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    /* üéØ CENTRADO EN ESCRITORIO (como en el dise√±o original) */
    text-align: center; 
    padding-right: 32px;
    flex: 1; 
  }

  /* ESTILOS DE IMAGEN */
  figure {
      display: block;
  }
  
  img { 
      aspect-ratio: 1 / 1;
      object-fit: cover;
      width: 128px;
      border-radius: 16px;
      border: 1px solid var(--color-border);
  }
  /* FIN ESTILOS DE IMAGEN */

  /* üéØ TAMA√ëO GRANDE Y COLOR DE TEMA PARA EL NOMBRE */
  h1 {
    font-size: 2rem;
    color: var(--color-text);
  }

  h2 {
    color: var(--color-text-secondary);
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
  }

  span {
    color: var(--color-text-secondary);
    display: flex;
    align-items: center;
    /* üéØ CENTRADO PARA EL ICONO DE UBICACI√ìN */
    justify-content: center; 
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }

  footer {
    color: var(--color-text-secondary);
    font-size: 0.65rem;
    display: flex;
    gap: 4px;
    margin-top: 8px;
    /* üéØ CENTRADO PARA LOS √çCONOS SOCIALES */
    justify-content: center; 
  }

  footer a {
    color: var(--color-text-secondary);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--color-border);
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  footer a:hover {
    background: var(--color-bg-hover);
    border: 1px solid var(--color-border);
  }

  /* MEDIA QUERY PARA MOVIL */
  @media (width <= 700px) {
    .container {
      /* Imagen encima del texto en m√≥vil */
      flex-direction: column-reverse; 
      padding-top: 1rem;
      justify-content: center;
    }

    .info {
      justify-content: center;
      align-items: center;
      text-align: center;
      padding-right: 0;
    }

    h1 {
        font-size: 1.8rem; 
    }

    span, footer {
      justify-content: center;
    }
  }
</style>
