---
import Section from "../Section.astro"
import { work } from "@cv"

// L칍GICA DE ORDENAMIENTO: Ordena los trabajos por a침o de finalizaci칩n (Descendente)
const sortedWork = [...work].sort((a, b) => {
    // Funci칩n auxiliar para obtener el a침o final (maneja 'null', 'Actual', 'present' como el a침o actual)
    const getEndYear = (dateString: string | null | undefined) => {
        if (!dateString || dateString.toLowerCase() === 'actual' || dateString.toLowerCase() === 'present') {
            // Usa el a침o actual para que las experiencias 'actuales' aparezcan al principio
            return new Date().getFullYear(); 
        }
        // Devuelve el a침o de la fecha o 0 si hay error de parsing
        const date = new Date(dateString);
        return isNaN(date.getFullYear()) ? 0 : date.getFullYear();
    };

    const endDateA = getEndYear(a.endDate);
    const endDateB = getEndYear(b.endDate);
    
    // 1. Criterio Principal: Ordenar por a침o de finalizaci칩n (b - a = descendente)
    if (endDateB !== endDateA) {
        return endDateB - endDateA;
    }
    
    // 2. Criterio Secundario: Si los a침os de fin son iguales, ordenar por a침o de inicio
    const startDateA = new Date(a.startDate).getFullYear();
    const startDateB = new Date(b.startDate).getFullYear();
    
    return startDateB - startDateA;
});
---

<Section title="Experiencia laboral">
  <ul>
    {
      sortedWork.map(
        ({ name, startDate, endDate, position, summary, url }) => {
          // 1. Obtiene el a침o de inicio
          const startYear = new Date(startDate).getFullYear()

          // 2. Determina el a침o de finalizaci칩n a mostrar
          let displayEndYear: string | number = "Actual";
          let endYear: number | null = null;

          if (endDate && endDate.toLowerCase() !== 'actual' && endDate.toLowerCase() !== 'present') {
              const date = new Date(endDate);
              if (!isNaN(date.getFullYear())) {
                  endYear = date.getFullYear();
                  displayEndYear = endYear;
              } else {
                  displayEndYear = endDate; // Si es inv치lido, muestra la cadena original (ej: "Actual")
              }
          }

          // 3. 游꿢 L칍GICA DE CORRECCI칍N DE REDUNDANCIA: 
          // Si el a침o de inicio es igual al a침o de fin, mostramos solo el a침o de inicio.
          const isSameYear = endYear && startYear === endYear;

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      <a href={url} title={`Ver ${name}`} target="_blank">
                        {name}
                      </a>
                    </h3>
                    <h4>{position}</h4>
                  </div>

                  <div>
                    <time 
                      datetime={startDate}
                      data-title={startDate}>
                        {startYear}
                    </time>
                    {/* MOSTRAMOS EL GUION Y EL A칌O FINAL SOLO SI NO SON EL MISMO A칌O */}
                    { !isSameYear && " - " }
                    { !isSameYear && (
                        <time 
                            datetime={endDate}
                            data-title={endDate}>
                            {displayEndYear}
                        </time>
                    )}
                  </div>
                </header>

                <footer>
                  <p>{summary}</p>
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  /* --- APLICACI칍N DEL TEMA OSCURO Y COLORES --- */

  article h3 {
    font-weight: 500;
    color: var(--color-text); 
  }

  article a {
    color: var(--color-text); 
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: var(--color-text); 
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    min-width: 102px;
    cursor: default;
  }

  /* ESTILOS DEL TOOLTIP */

  [data-title]:hover:after {
    opacity: 1;
    transition: all 0.1s ease-in-out 0.5s;
    visibility: visible;
  }

  [data-title]:after {
    content: attr(data-title);
    background-color: var(--color-bg-hover); 
    color: var(--color-text);
    font-size: .75rem;
    font-family: Menlo, Monaco, Lucida Console, "Courier New", monospace;;
    position: absolute;
    padding: .2rem .5rem;
    bottom: -1.4rem;
    left: 50%;
    white-space: nowrap;
    box-shadow: 1px 1px 1px #222222;
    opacity: 0;
    border: 1px solid var(--color-border);
    z-index: 99999;
    visibility: hidden;
    border-radius: 6px;
  }

  [data-title] {
    position: relative;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
