---
import Section from "../Section.astro"
import HTML from "@/icons/html.astro"
import CSS from "@/icons/css.astro"
import JavaScript from "@/icons/javascript.astro"
import TypeScript from "@/icons/type.astro"
import React from "@/icons/react.astro"
import Node from "@/icons/node.astro"
import MySQL from "@/icons/sql.astro"
import MongoDB from "@/icons/mongo.astro"
import Python from "@/icons/python.astro"
import Django from "@/icons/django.astro"
import FastAPI from "@/icons/fastapi.astro"
import Ruby from "@/icons/ruby.astro"
import Docker from "@/icons/docker.astro"
import Kubernetes from "@/icons/kubernetes.astro"
import Git from "@/icons/git.astro"
import GitHub from "@/icons/GitHub.astro"
import Tailwind from "@/icons/tailwind.astro"
import Next from "@/icons/next.astro"
import { skills } from "@cv"
import Swift from "@/icons/swift.astro"
import SwiftUI from "@/icons/swiftui.astro"
import Kotlin from "@/icons/kotlin.astro"
import Flutter from "@/icons/Flutter.astro"
import Vue from "@/icons/vue.astro"
import Svelte from "@/icons/svelte.astro"
import NestJS from "@/icons/nestjs.astro"
import Java from "@/icons/java.astro"
import SpringBoot from "@/icons/springboot.astro"
import CSharp from "@/icons/csharp.astro"
import DotNet from "@/icons/dotnet.astro"
import AWS from "@/icons/aws.astro"
import Azure from "@/icons/azure.astro"
import Vercel from "@/icons/vercel.astro"
import Railway from "@/icons/railway.astro"
import Angular from "@/icons/angular.astro"

const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  TypeScript,
  React,
  Node,
  MySQL,
  MongoDB,
  Python,
  Django,
  FastAPI,
  Ruby,
  Docker,
  Kubernetes,
  Git,
  GitHub,
  Next,
  Tailwind,
  Swift,
  SwiftUI,
  Kotlin,
  Flutter,
  Angular,
  Vue,
  Svelte,
  NestJS,
  Java,
  SpringBoot,
  CSharp,
  DotNet,
  AWS,
  Azure,
  Vercel,
  Railway,
}
---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name }) => {
        let iconName = name
        
        // Handle special name mappings
        if (name === "Next.js") iconName = "Next"
        else if (name === "C#") iconName = "CSharp"
        else if (name === ".NET") iconName = "DotNet"
        else if (name === "Spring Boot") iconName = "SpringBoot"
        
        const Icon = SKILLS_ICONS[iconName]

        return (
          <li>
            {Icon && <Icon />} <span>{name}</span>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    align-items: center;
    background: var(--color-bg-hover);
    border: 1px solid var(--color-border);
    border-radius: 5px;
    color: var(--color-text);
    display: flex;
    font-size: 0.8rem;
    font-weight: 500;
    gap: 4px;
    padding: 0.25rem 0.6rem;
    transition: all 0.2s ease;
  }

  li:hover {
    background: var(--color-border);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  li :global(svg) {
    height: 14px;
    width: 14px;
    fill: var(--color-text);
    transition: all 0.3s ease;
  }

  @media (width >= 1200px) {
    ul {
      gap: 12px;
    }
    
    li {
      font-size: 0.85rem;
      padding: 0.3rem 0.7rem;
    }
    
    li :global(svg) {
      height: 15px;
      width: 15px;
    }
  }

  @media (width >= 1400px) {
    ul {
      gap: 14px;
    }
    
    li {
      font-size: 0.9rem;
      padding: 0.4rem 0.8rem;
    }
    
    li :global(svg) {
      height: 16px;
      width: 16px;
    }
  }
</style>
