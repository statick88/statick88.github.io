---
import Section from "../Section.astro"
import HTML from "@/icons/html.astro"
import CSS from "@/icons/css.astro"
import JavaScript from "@/icons/javascript.astro"
import TypeScript from "@/icons/type.astro"
import React from "@/icons/react.astro"
import Node from "@/icons/node.astro"
import MySQL from "@/icons/sql.astro"
import MongoDB from "@/icons/mongo.astro"
import Python from "@/icons/python.astro"
import Django from "@/icons/django.astro"
import FastAPI from "@/icons/fastapi.astro"
import Ruby from "@/icons/ruby.astro"
import Docker from "@/icons/docker.astro"
import Kubernetes from "@/icons/kubernetes.astro"
import Git from "@/icons/git.astro"
import GitHub from "@/icons/GitHub.astro"
import Tailwind from "@/icons/tailwind.astro"
import Next from "@/icons/next.astro"
import { skills } from "@cv"
import Swift from "@/icons/swift.astro"
import SwiftUI from "@/icons/swiftui.astro"
import Kotlin from "@/icons/kotlin.astro"
import Flutter from "@/icons/Flutter.astro"

const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  TypeScript,
  React,
  Node,
  MySQL,
  MongoDB,
  Python,
  Django,
  FastAPI,
  Ruby,
  Docker,
  Kubernetes,
  Git,
  GitHub,
  Next,
  Tailwind,
  Swift,
  SwiftUI,
  Kotlin,
  Flutter,
}
---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name }) => {
        const iconName = name === "Next.js" ? "Next" : name
        const Icon = SKILLS_ICONS[iconName]

        return (
          <li>
            {Icon && <Icon />} <span>{name}</span>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    align-items: center;
    /* üéØ CORRECCI√ìN TEMA: Usamos el fondo de hover (var(--color-bg-hover)) como color base. 
       Esto asegura que el fondo cambie correctamente entre temas (oscuro en modo oscuro, claro en modo claro). */
    background: var(--color-bg-hover); 
    border: 1px solid var(--color-border);
    border-radius: 6px;
    /* Color de Texto: Se mantiene la variable principal, lo cual es correcto. */
    color: var(--color-text);
    display: flex;
    font-size: 0.8rem;
    font-weight: 500;
    gap: 4px;
    padding: 0.2rem 0.6rem;
    transition: all 0.3s ease;
  }

  li:hover {
    /* Mantenemos el hover, que hace el color a√∫n m√°s evidente */
    /* Aqu√≠ podr√≠amos usar #3c4b69 o un color m√°s oscuro si lo deseas, 
       pero mantener la variable es m√°s seguro para ambos temas. */
    background: var(--color-border); 
  }

  /* Asegura que el √≠cono tenga el mismo color que el texto del tema */
  li :global(svg) {
    height: 16px;
    width: 16px;
    fill: var(--color-text);
  }
</style>
