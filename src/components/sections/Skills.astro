import GitHub from "@/icons/GitHub.astro"
import Section from "../Section.astro"

import { projects } from "@cv"
---

<Section title="Portafolio">
  <ul>
    {
      projects.map(
        ({ url, description, highlights, name, isActive, github }) => {
          return (
            <li>
              <article>
                <header>
                  <h3>
                    <a href={url} target="_blank" title={`Ver el proyecto ${name}`}>
                      {name}
                    </a>
                    {isActive && <span>‚Ä¢</span>}
                    {github && (
                      <a
                        class="github-code-link"
                        href={github}
                        target="_blank"
                        title={`Ver c√≥digo fuente del proyecto ${name}`}
                      >
                        <GitHub />
                      </a>
                    )}
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlight) => {
                    return <span>{highlight}</span>
                  })}
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  article {
    border-radius: 8px;
    /* Antes: border: 1px solid #f2f2f2; */
    /* USAR VARIABLE DE BORDE DEL TEMA */
    border: 1px solid var(--color-border);
    /* Antes: color: #fff (impl√≠cito por el fondo blanco) */
    /* USAR VARIABLE DE FONDO LIGERAMENTE M√ÅS CLARO PARA EL BOX */
    background: var(--color-bg-hover); 
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
    transition: all 0.3s ease;
  }

  article:hover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    /* Oscurecer un poco m√°s al hacer hover */
    background: #232e4d; 
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a {
    /* Antes: color: #111; */
    /* USAR COLOR DE TEXTO PRINCIPAL */
    color: var(--color-text);
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
    /* USAR COLOR DE TEXTO SECUNDARIO */
    color: var(--color-text-secondary);
  }

  article h3 span {
    color: rgb(0, 188, 47);
    animation-name: flicker;
    animation-duration: 3s;
    animation-timing-function: ease-in;
    animation-iteration-count: infinite;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    /* Antes: background: #eee; color: #444; */
    /* AJUSTAR TAGS: FONDO OSCURO, TEXTO CLARO */
    background: #3c4b69; /* Un azul intermedio oscuro */
    color: var(--color-text); /* Texto principal para los tags */
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  .github-code-link {
    margin-left: 5px;
  }

  @keyframes flicker {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.25;
    }
    100% {
      opacity: 1;
    }
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0px;
    }

    article {
      border: none;
      /* Antes: box-shadow: 0 1px 1px #f2f2f2; */
      /* SOMBRA EN MODO OSCURO (sutil) */
      box-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
      padding: 0 0 16px 0;
    }
  }

  @media print {
    article h3 span {
      animation-name: none;
    }
  }
</style>

