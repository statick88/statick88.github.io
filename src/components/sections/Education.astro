---
import Section from "../Section.astro"

import { education } from "@cv"

const todayIso = new Date().toISOString().slice(0, 10)
---

<Section title="EducaciÃ³n" i18nKey="section.education">
  <ul>
    {
      education.map(({ institution, startDate, endDate, area }, index) => {
        const startIso = String(startDate ?? "").slice(0, 10)
        const endIso = String(endDate ?? "").slice(0, 10)
        const isInProgress = Boolean(
          startIso && startIso <= todayIso && (!endIso || todayIso <= endIso)
        )

        const startYear = startIso.slice(0, 4)
        const endYear = endIso.slice(0, 4)
        const years = endYear ? startYear + " - " + endYear : startYear

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{institution}</h3>
                </div>

                {
                  isInProgress ? (
                    <time data-i18n="education.inProgress">En proceso</time>
                  ) : (
                    <time>{years}</time>
                  )
                }
              </header>

              <footer>
                <p data-i18n={'cv.education.' + index + '.area'}>{area}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: var(--color-text);
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
