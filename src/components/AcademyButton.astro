---
interface Props {
  class?: string
}

const { class: className = "" } = Astro.props

const ACADEMY_ICON = `
  <svg width="16" height="16" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" style="margin-right: 8px" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M22 10v6M2 10l6.5 6.5L22 10"></path>
    <path d="M14 2v6m0 0v6m0-6h6m-6 0h-6"></path>
    <path d="M2 16l6.5-6.5M22 16l-6.5 6.5"></path>
    <path d="M2 8l6.5-6.5M22 8l-6.5 6.5"></path>
    <path d="M12 14l-4 4m0 0l4-4m0 0l4 4"></path>
    <circle cx="12" cy="8" r="2"></circle>
  </svg>
`;
---

<a 
  href="https://statick88.github.io/academy" 
  target="_blank" 
  rel="noopener noreferrer"
  aria-label="Visitar Statick Academy"
  data-i18n-key="academy.text"
  class={className}
>
  <span>{ACADEMY_ICON}</span>
  <span data-i18n="academy.text">Academia</span>
</a>

<style>
  a {
    position: fixed;
    top: 1rem;
    right: 8rem;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    color: var(--color-text);
    border-radius: 0.5rem;
    padding: 0.5rem 0.75rem;
    display: flex;
    align-items: center;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s ease;
    z-index: 9999;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    text-decoration: none;
    font-weight: 500;
  }

  a:hover {
    transform: scale(1.05);
    background: var(--color-bg-hover);
    border-color: var(--color-text-secondary);
  }

  a svg {
    width: 16px;
    height: 16px;
  }

  @media print {
    a { 
      display: none; 
    }
  }

  @media (max-width: 500px) {
    a {
      right: 7rem;
      padding: 0.4rem 0.6rem;
      font-size: 0.8rem;
    }

    a span:first-child {
      margin-right: 6px;
    }
  }
</style>