<button id="lang-toggle" aria-label="Cambiar idioma">
  <span class="lang-text">ES</span>
</button>

<script is:inline>
  const handleLangClick = () => {
    const element = document.documentElement;
    const currentLang = element.getAttribute('lang') || 'es';
    const newLang = currentLang === 'es' ? 'en' : 'es';
    
    element.setAttribute('lang', newLang);
    localStorage.setItem('lang', newLang);
    
    // Update button text
    const btn = document.getElementById('lang-toggle');
    if (btn) {
      const langText = btn.querySelector('.lang-text');
      if (langText) {
        langText.textContent = newLang.toUpperCase();
      }
    }
    
    // Dispatch event for other components to listen
    window.dispatchEvent(new CustomEvent('langchange', { detail: { lang: newLang } }));
  }

  document.getElementById('lang-toggle')?.addEventListener('click', handleLangClick);
</script>

<style>
  button {
    position: fixed;
    top: 1rem;
    right: 4.5rem;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    color: var(--color-text);
    border-radius: 50%;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
    z-index: 9999;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }

  button:hover {
    transform: scale(1.1);
    background: var(--color-bg-hover);
  }

  .lang-text {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text);
  }

  @media print {
    button { display: none; }
  }

  @media (max-width: 500px) {
    button {
      right: 4rem;
      width: 32px;
      height: 32px;
    }
  }
</style>
