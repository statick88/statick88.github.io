    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
    z-index: 9999;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }

  button:hover {
    transform: scale(1.1);
